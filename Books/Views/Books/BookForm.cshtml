@model Books.ViewModels.BookFormViewModel

@{
    ViewBag.Title = "Create";
}

<h3 class="text-primary">
    @(Model.Id==0 ?"Create New Book":"Edit Book")
</h3>
<hr />
@using (Html.BeginForm("Save","Books")) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
<div class="form-group">
    @Html.LabelFor(m=>m.Title)
    @Html.TextBoxFor(m=>m.Title,new {@class= "form-control my-3" })
    @Html.ValidationMessageFor(m => m.Title, null, new {@class="text-danger"})
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Author)
    @Html.TextBoxFor(m => m.Author, new { @class = "form-control my-3" })
    @Html.ValidationMessageFor(m => m.Author, null, new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.CategoryId)
    @Html.DropDownListFor(m=>m.CategoryId,new SelectList(Model.Categories,"Id","Name"),"-----Please Selecte Category-----", new { @class = "form-control form-select my-3" })
    @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description)
    @Html.TextAreaFor(m => m.Description, new { @class = "form-control my-3" })
    @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
</div>
<button type="submit" class="btn btn-outline-primary my-3"  >
    <i class="icofont-save"></i>
    Save
</button>
<a href="@Url.Action("Index")" class="btn btn-danger">
    <i class="icofont-ui-close"></i>
    Cancel
</a>
}
@section Scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }

